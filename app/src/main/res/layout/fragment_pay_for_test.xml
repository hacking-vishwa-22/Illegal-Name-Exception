<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PayForTestFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/dm_sans"
        android:text="Select the Tests you want to book for:"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/dark_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView">

        <Button
            android:id="@+id/go_test1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/grey"
            android:fontFamily="@font/dm_sans"
            android:paddingVertical="2dp"
            android:text="T1"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/go_test2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/grey"
            android:fontFamily="@font/dm_sans"
            android:paddingVertical="2dp"
            android:text="T2"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/go_test3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/grey"
            android:fontFamily="@font/dm_sans"
            android:paddingVertical="2dp"
            android:text="T3"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/go_test4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/grey"
            android:fontFamily="@font/dm_sans"
            android:paddingVertical="2dp"
            android:text="T4"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/go_test5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/grey"
            android:fontFamily="@font/dm_sans"
            android:paddingVertical="2dp"
            android:text="T5"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"

            />
    </LinearLayout>

    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="32dp"
        android:background="@color/dark_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll1" />

    <LinearLayout
        android:id="@+id/bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/source_sans_pro"
            android:text="Total Payable Amount"
            android:textAllCaps="false"
            android:textColor="@color/dark_blue"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/source_sans_pro"
            android:gravity="end"
            android:text="Rs. 0 /-"
            android:textAllCaps="false"
            android:textColor="@color/dark_blue"
            android:textSize="14sp"
            android:textStyle="bold" />


    </LinearLayout>

    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="4dp"
        android:background="@color/dark_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bill" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/payBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/dm_sans"
        android:paddingVertical="2dp"
        android:text="Pay"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/v2"
        android:autoSizeMaxTextSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="10dp"
        android:backgroundTint="@color/dark_blue"
        android:layout_marginEnd="12dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"

        />


</androidx.constraintlayout.widget.ConstraintLayout>